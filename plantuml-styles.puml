' ---------------------------
' Process phase stereotypes
' (input/output/procedure/load/save/continuous/task)
' ---------------------------

' Input: data coming in
skinparam activity<<input>> {
  BackgroundColor #ECFDF5
  BorderColor #059669
  BorderThickness 1.4
  FontColor #064E3B
  RoundCorner 14
}

' Output: data/result out
skinparam activity<<output>> {
  BackgroundColor #EFF6FF
  BorderColor #2563EB
  BorderThickness 1.4
  FontColor #1E3A8A
  RoundCorner 14
}

' Procedure: standard operating step (SOP)
skinparam activity<<procedure>> {
  BackgroundColor #F8FAFC
  BorderColor #64748B
  BorderThickness 1.2
  FontColor #0B1220
  FontStyle bold
  RoundCorner 14
}

' Load: read from store/system
skinparam activity<<load>> {
  BackgroundColor #FFF7ED
  BorderColor #F97316
  BorderThickness 1.3
  FontColor #7C2D12
  RoundCorner 14
}

' Save: write to store/system
skinparam activity<<save>> {
  BackgroundColor #FEF2F2
  BorderColor #EF4444
  BorderThickness 1.3
  FontColor #7F1D1D
  RoundCorner 14
}

' Continuous: ongoing monitoring/looping activity
skinparam activity<<continuous>> {
  BackgroundColor #F5F3FF
  BorderColor #7C3AED
  BorderThickness 1.3
  FontColor #3B0764
  RoundCorner 14
}

' Task: generic task (slightly emphasized vs base)
skinparam activity<<task>> {
  BackgroundColor #E6F6F8
  BorderColor #007E8A
  BorderThickness 1.2
  FontColor #0B1220
  RoundCorner 14
}

' ---------------------------
' Decisions / start / end
' ---------------------------
skinparam activityDiamond {
  BackgroundColor #FFF7ED
  BorderColor #F97316
  FontColor #7C2D12
}

' ---------------------------
' Timer / wait / deadline
' ---------------------------
skinparam activity<<timer>> {
  BackgroundColor #FFFFFF
  BorderColor #FFFFFF
  BorderThickness 0
  FontColor #334155
  'FontStyle italic
  RoundCorner 14
}

skinparam activityStartColor #00A6B4
skinparam activityEndColor #00A6B4
